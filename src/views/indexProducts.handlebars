{{#if isValid}}
<div>
	<table>
		<thead>
			<tr>
				<th>Product</th>
				<th>Description</th>
				<th>Category</th>
				<th>Price</th>
				<th>Add to Current Cart</th>
			</tr>
		</thead>
		<tbody>
			{{#each docs}}
			<tr>
				<td>{{this.title}}</td>
				<td>{{this.description}}</td>
				<td>{{this.category}}</td>
				<td>{{this.price}}</td>
				<td>
					<form action="http://localhost:8080/api/carts/{{result.cart}}/products/{{this._id}}">
						<button type="submit">
							Add to cart
						</button>
					</form>
				</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>
<br />
<div>
	{{#if hasPrevPage}}
	<a href={{this.prevLink}}><< Prev</a>
	{{/if}}
	&nbsp;
	{{this.page}}
	&nbsp;
	{{#if hasNextPage}}
	<a href={{this.nextLink}}>Next >></a>
	{{/if}}
</div>
{{else}}
<h1>No more products</h1>
{{/if}}


<script src="../routes/carts.route.js"></script>